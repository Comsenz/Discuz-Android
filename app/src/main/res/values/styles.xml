<resources>

    <style name="Widget.Rednet" parent="android:Widget" />

    <style name="TextAppearance.Rednet" parent="android:TextAppearance" />

    <style name="Widget.Rednet.AbsListView" parent="Widget.AppCompat.ListView">
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.Rednet.AbsListView.NoDivider" parent="Widget.AppCompat.ListView">
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.Rednet.PagerTabSlidingIndicator" parent="Widget.Rednet">
        <item name="pstsIndicatorColor">#64a0d7</item>
        <item name="pstsUnderlineColor">@android:color/transparent</item>
        <item name="pstsDividerColor">@android:color/transparent</item>
        <item name="pstsIndicatorHeight">4px</item>
        <item name="pstsUnderlineHeight">1px</item>
        <!--  <item name="pstsDividerPadding"></item>-->
        <item name="pstsDividerWidth">0px</item>
        <!-- <item name="pstsTabPaddingLeftRight"></item>-->
        <!--  <item name="pstsScrollOffset"></item>-->
        <item name="pstsTabBackground">@android:color/transparent</item>
        <item name="pstsShouldExpand">true</item>
        <!-- <item name="pstsTextAllCaps"></item>-->
    </style>

    <style name="Widget.Rednet.CirclePageIndicator" parent="Widget.Rednet">
        <item name="centered">true</item>
        <item name="snap">true</item>
        <item name="fillColor">#64a0d7</item>
        <item name="pageColor">#FFFFFF</item>
        <item name="strokeWidth">1px</item>
        <item name="strokeColor">#64a0d7</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.Rednet.CirclePageIndicator.Fill" parent="Widget.Rednet.CirclePageIndicator">
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Rednet.Title" parent="TextAppearance.Rednet">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Rednet.SubTitle" parent="TextAppearance.Rednet">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Rednet.Text" parent="TextAppearance.Rednet">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Rednet.Text2" parent="TextAppearance.Rednet">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Rednet.Text.Title" parent="TextAppearance.Rednet.SubTitle" />

    <style name="TextAppearance.Rednet.Tip" parent="TextAppearance.Rednet">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="LoadingPopupCircleAnimation" parent="Widget.Rednet">
        <item name="android:maxWidth">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="Theme.Rednet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Rednet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/in</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>

    <!-- 自定义Dialog -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
