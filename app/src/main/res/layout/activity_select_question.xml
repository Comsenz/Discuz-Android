<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_select_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/select_0_view"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/selector_list_item_bg">

            <TextView
                style="@style/TextAppearance.Rednet.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:text="安全提问（未设置请忽略）"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/dividing_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/select_1_view"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/selector_list_item_bg">

            <TextView
                style="@style/TextAppearance.Rednet.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:text="母亲的名字"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/dividing_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/select_2_view"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/selector_list_item_bg">

            <TextView
                style="@style/TextAppearance.Rednet.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:text="爷爷的名字"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/dividing_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/select_3_view"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/selector_list_item_bg">

            <TextView
                style="@style/TextAppearance.Rednet.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:text="父亲出生的城市"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/dividing_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/select_4_view"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/selector_list_item_bg">

            <TextView
                style="@style/TextAppearance.Rednet.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:text="你其中一位老师的名字"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/dividing_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/select_5_view"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/selector_list_item_bg">

            <TextView
                style="@style/TextAppearance.Rednet.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:text="你个人计算机的型号"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/dividing_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/select_6_view"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/selector_list_item_bg">

            <TextView
                style="@style/TextAppearance.Rednet.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:text="你最喜欢的餐馆的名称"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/dividing_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/select_7_view"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/selector_list_item_bg">

            <TextView
                style="@style/TextAppearance.Rednet.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:text="驾驶执照最后四位的数字"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/dividing_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cancel_view"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/selector_list_item_bg">

            <TextView
                style="@style/TextAppearance.Rednet.Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:text="取消"
                android:textColor="@color/blue" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
