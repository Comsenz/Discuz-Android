<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tthread_title_view"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="#fff"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_xing"
            style="@style/TextAppearance.Rednet.Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dip"
            android:layout_marginTop="15dp"
            android:text="*"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextAppearance.Rednet.Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:layout_toRightOf="@+id/tv_xing"
            android:maxLength="5"
            android:textColor="@color/gray_font_title"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/TextAppearance.Rednet.Text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:background="@color/transparent"
            android:cursorVisible="true"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_seleter"
            style="@style/TextAppearance.Rednet.Text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="80dp"
            android:background="@color/transparent"
            android:cursorVisible="true"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/go"
            android:gravity="center_vertical"
            android:text="请选择"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/xuxian"
            android:layerType="software" />

    </RelativeLayout>
</LinearLayout>
