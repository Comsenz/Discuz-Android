<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/android.support.v7.cardView"
    xmlns:rednet="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    card_view:cardCornerRadius="8dp">

    <cn.tencent.DiscuzMob.widget.AsyncImageView
        android:id="@+id/activity_cover"
        android:layout_width="100dip"
        android:layout_height="130dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        rednet:riv_border_width="0dp"
        rednet:riv_corner_radius="4dp" />

    <TextView
        android:id="@+id/activity_title"
        style="@style/TextAppearance.Rednet.Text.Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/activity_cover"
        android:text="你好速度收到开始打"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/activity_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dip">

        <ImageView
            android:id="@+id/address_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/address_text"
            style="@style/TextAppearance.Rednet.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/address_tag"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/address_tag"
            android:text="sdasdasdasdasd"
            android:textColor="@color/gray_font_title" />

        <ImageView
            android:id="@+id/time_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_tag"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="8dip" />

        <TextView
            style="@style/TextAppearance.Rednet.Text"
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/time_tag"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/address_tag"
            android:text="sdasdasdasdasd"
            android:textColor="@color/gray_font_title" />

        <TextView
            android:id="@+id/member_size"
            style="@style/TextAppearance.Rednet.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/time_tag"
            android:layout_marginRight="4dip"
            android:text="18"
            android:textColor="@color/gray_font_title" />

        <ImageView
            android:id="@+id/member_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/time_tag"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="4dip"
            android:layout_toLeftOf="@id/member_size"
            android:src="@drawable/icon_member" />


    </RelativeLayout>


</RelativeLayout>
